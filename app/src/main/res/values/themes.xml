<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkyEducation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <item name="android:fitsSystemWindows">true</item>

        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:height">53dp</item>
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="mySpi">
        <item name="android:textColor">@color/hint_text_color</item>
    </style>

    <style name="CustomEditText">
        <item name="android:textSize">@dimen/normal_font</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">#707070</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/custom_edit_text_background</item>
    </style>

    <style name="TextViewExtraBold">
        <item name="fontFamily">@font/extra_bold</item>
        <item name="android:textSize">@dimen/extra_big_font</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTitle">
        <item name="fontFamily">@font/bold</item>
